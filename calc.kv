<MyCalc>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height


        TextInput:
            id: the_input
            text: "0"
            halign: "right"
            size_hint: (1.0, 0.35)
            font_size: 70
            background_color: (17/255,123/255,189/255)
            color: (0,0,0)
            multiline: False

        GridLayout:
            cols: 4
            rows: 5
            spacing: 0

            # row 1
            Button:
                text: "AC"
                font_size: 32
                size_hint: (0.2,1)
                color: (17/255,123/255,189/255)
                background_normal: ''
                background_color: (153/255,214/255,224/255)
                on_press: root.clear()
            Button:
                text: "+/-"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.pos_neg()
            Button:
                text: "%"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.clicked('%')
            Button:
                text: "/"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.clicked('/')

            # row 2
            Button:
                text: "7"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('7')
            Button:
                text: "8"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('8')
            Button:
                text: "9"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('9')
            Button:
                text: "x"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.clicked('*')

            # row 3
            Button:
                text: "4"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('4')
            Button:
                text: "5"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('5')
            Button:
                text: "6"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('6')
            Button:
                text: "-"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.clicked('-')

            # row 4
            Button:
                text: "1"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('1')
            Button:
                text: "2"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('2')
            Button:
                text: "3"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('3')
            Button:
                text: "+"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.clicked('+')

            # row 5
            Button:
                text: "0"
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                on_press: root.clicked('0')
            Button:
                text: ""
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
            Button:
                text: "."
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (153/255,214/255,224/255)
                on_press: root.multidec()

            Button:
                text: "="
                font_size: 32
                size_hint: (0.2,1)
                background_normal: ''
                color: (0,0,0)
                background_color: (17/255,123/255,189/255)
                on_press: root.answer()